<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:padding="15dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationViewTODOLISt2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/icon_animation_home"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/lottieAnimationView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/lottieAnimationView"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ranking" />

        <TextView
            android:text="THỐNG KÊ"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/black"
                android:padding="12dp"
                android:textSize="18dp"
                android:text="Tổng thu"
                android:layout_weight="1"
                android:textColor="@color/white"
                />
            <View
                android:layout_width="1.5dp"
                android:background="@color/white"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tienThu"
                android:padding="12dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Số tiền"
                android:textSize="18dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/black"
                android:padding="12dp"
                android:textSize="18dp"
                android:text="Tổng chi"
                android:layout_weight="1"
                android:textColor="@color/white"
                />
            <View
                android:layout_width="1.5dp"
                android:background="@color/white"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tienChi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Số tiền"
                android:textSize="18dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="@color/red"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Còn lại"
                android:background="@color/black"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textSize="18dp" />
            <View
                android:layout_width="1.5dp"
                android:background="@color/white"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tienConLai"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:background="@color/red"
                android:padding="12dp"
                android:text="Số tiền"
                android:textSize="18dp"
                />
        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/tungay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_ui"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Chọn ngày bắt đầu"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/denngay"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ui"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Chọn ngày kết thúc"
                android:textSize="22dp" />

            <Button
                android:id="@+id/btnShow"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ui"
                android:text="Kết quả"
                android:textColor="#fff"
                android:padding="12dp"
                android:textSize="16dp" />
        </LinearLayout>




    </LinearLayout>

</FrameLayout>